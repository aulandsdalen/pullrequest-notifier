%table.table.table-striped.table-hover
	%thead
		%tr
			%td= '#'
			%td= 'is open'
			%td= 'is merged'
			%td= 'owner id'
			%td= 'name'
			%td= 'created at'
			%td= 'link'
	%tbody 
	- locals[:reqs].each do |req|
		%tr{:class => ("success" if req[:is_merged])}
			%td= req[:id]
			%td= req[:is_open]
			%td= req[:is_merged]
			%td= req[:owner_id]
			%td
				- if req[:realname] == 'UNKNOWN'
					%i
						%a{:href => '/students/' + req[:uid].to_s} #{req[:username]}
				- else
					%a{:href => '/students/' + req[:uid].to_s } #{req[:realname]}
			%td= req[:created_at]
			%td
				%a{:href => req[:link]} #{req[:link]}